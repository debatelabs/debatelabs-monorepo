{
  "name": "debate-hub",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=@repo/client",
    "dev:server": "turbo dev --filter=@repo/server",
    "test": "turbo test",
    "test:related": "turbo test:related",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
